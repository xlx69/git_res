.header{
  height: 400rpx;
  background: #fff;
}

.root{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.touxiang {
  width:  200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.anniu{
  padding-top: 100rpx;
  background-color: #fff;
}

.anniu2{
  background: #fff;
  font-size: 50rpx;
  color: #3CB371;
}

.right_arrow{
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute; /*这个可以百度一下*/
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.item{
  display: flex;
  padding: 25rpx;
  background: #fff;
  align-items: center;
  border: 1px solid rgb(206, 205, 205); 
  margin-top: 20rpx;
  border-radius:10px;
}
