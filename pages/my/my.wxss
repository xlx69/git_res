page {
  height: 100%;
  background: rgb(237, 237, 237);
}

.header {
  height: 420rpx;
  background: #fff;
}

.root {
  display: flex;


}

.touxiang {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10%;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  margin-left: 40rpx;
}

.text {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.necheng {
  font-size: x-large;
  padding-top: 100rpx;
  margin-left: 70rpx;
}

.img {
  margin-top: 80rpx;
}


.anniu {
  padding-top: 100rpx;
  background-color: #fff;
}

.anniu2 {

  background: #fff;
  font-size: 50rpx;
  color: #3CB371;
}

.right_arrow {
  border: solid gray;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  /*这个可以百度一下*/
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}

.item {
  display: flex;
  padding: 25rpx;
  background: #fff;
  align-items: center;
  border: 1px solid rgb(237, 237, 237);
  margin-top: 20rpx;
}

.item2 {
  display: flex;
  padding: 25rpx;
  background: #fff;
  align-items: center;
  /* border: 1px solid rgb(237, 237, 237);  */
  margin-top: 20rpx;
  position: relative;
}


.item1 {
  margin-top: 0rpx;
  display: flex;
  padding: 25rpx;
  background: #fff;
  align-items: center;
  position: relative;
}

.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}

.border-bottom {
  /* background: #bcdc9d; */
  padding: 15px;
}

.border-bottom:after {
  content: '';
  position: absolute;
  left: 100rpx;
  top: auto;
  bottom: 0;
  right: auto;
  height: 2rpx;
  width: 650rpx;
  background-color: #d6d6d6;
}